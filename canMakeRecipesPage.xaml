<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="recipeFinder.canMakeRecipesPage" BackgroundColor = "LightBlue">
    <ContentPage.Content>

        <StackLayout Margin="20, 50, 20, 0">

            <Label x:Name = "TitleLabel"
                   Text="Type of Recipe"
                   HorizontalTextAlignment="Center"
                   FontSize="50"
                   HorizontalOptions="Center"
                   Margin="10"
                   TextColor="White"/>
                   

        <ListView x:Name="CanMakeRecipesListView" ItemTapped="CanMakeRecipesListView_ItemTapped" Margin="20, 0, 20, 30">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding name}" Detail="{Binding description}" ImageSource="{Binding image}"/>


                    


                </DataTemplate>







            </ListView.ItemTemplate>





                </ListView>

            </StackLayout>

    </ContentPage.Content>
</ContentPage>
